# Admin Product CRUD endpoints
POST    /admin/products          controllers.AdminProductController.create()
GET     /admin/products/:id      controllers.AdminProductController.get(id: Long)
GET     /admin/products          controllers.AdminProductController.list()
PUT     /admin/products/:id      controllers.AdminProductController.update(id: Long)
DELETE  /admin/products/:id      controllers.AdminProductController.delete(id: Long)

# GraphQL API
POST    /api/products            controllers.GraphQLProductController.products

# Admin healthcheck endpoint
GET     /admin/ping              controllers.AdminProductController.ping()